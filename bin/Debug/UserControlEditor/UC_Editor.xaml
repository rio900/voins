<UserControl
    x:Class="Voins.UserControlEditor.UC_Editor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Voins.UserControlEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" Width="1000" Height="700" Background="Black">
    
    <Grid Background="#FF292929">
			<Canvas x:Name="C_Root" HorizontalAlignment="Center" Height="650" VerticalAlignment="Top" Width="850" Margin="0,0,150,0">
			<Canvas.Background>
    			<ImageBrush ImageSource="ms-appx:///Image/Ground.png"/>
    		</Canvas.Background>
		</Canvas>
    	<Button x:ConnectionId='1' Content="Get Map"                    HorizontalAlignment="Left" Margin="898,652,0,0" VerticalAlignment="Top"/>
    	<Button Content="Clear" HorizontalAlignment="Left" Margin="10,652,0,0" VerticalAlignment="Top"/>
    	<ListView  HorizontalAlignment="Left" Name="C_PaintListView" Height="650" Margin="855,0,0,0" VerticalAlignment="Top" Width="135">
            <Grid Height="107" Width="100">
                <Image Height="47" Source="ms-appx:///Image/Sk.png" Stretch="Fill" Width="51"/>
            </Grid>
            <Grid Height="107" Width="100">
    			<Image Height="47" Source="ms-appx:///Image/Gruss1.png" Stretch="Fill" Width="51"/>
            </Grid>
            <Grid Height="107" Width="100">
    			<Image Height="46" Source="ms-appx:///Image/1_test.png" Stretch="Fill" Width="34"/>
            </Grid>
            <Grid Height="107" Width="100">
    			<Image Height="42" Source="ms-appx:///Image/1_test3.png" Stretch="Fill" Width="22"/>
            </Grid>
          
        </ListView>
    	<TextBox x:Name="C_Position" HorizontalAlignment="Left" Margin="83,655,0,0" TextWrapping="Wrap" Text="Position" VerticalAlignment="Top" Width="302"/>
        <Button x:ConnectionId='2' Content="Eraser"                      HorizontalAlignment="Left" Margin="390,655,0,0" VerticalAlignment="Top" Height="35"/>
        <TextBox x:Name="C_MapText" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" AcceptsReturn="True" Height="650" Width="850" Visibility="Collapsed"/>

    </Grid>
</UserControl>

